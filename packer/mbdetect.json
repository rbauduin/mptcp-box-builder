{
    "variables": {
        "user": "vagrant",
        "password": "vagrant",
        "disk_size": 100000,
        "domain": ""
    },

    "builders":
    [
        {
            "name": "mptcpbox",

            "type": "virtualbox-ovf",
	    "source_path": "../livework/image.ova",
	    "guest_additions_mode" : "disable",
	    "headless" : "true",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "shutdown_command": "echo '{{user `password`}}'|sudo -S shutdown -h now"
        }
    ],

    "provisioners": [
        {
            "type": "file",
            "source": "files/update-mbdetect.sh",
            "destination": "/tmp/update-mbdetect.sh"
        },
        {
            "type": "file",
            "source": "files/compile-mbdetect.sh",
            "destination": "/tmp/compile-mbdetect.sh"
        },

        {
            "type": "shell",
            "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "scripts/update.sh",
                "scripts/packages.sh",
                "scripts/install_mbdetect.sh",
                "scripts/remove_compilation_stuff.sh",
                "scripts/vagrant.sh",
                "scripts/cleanup.sh"
            ]
        }


    ],

    "post-processors": [
        {
            "keep_input_artifact": false,
            "output": "box/mbdetect.box",
            "type": "vagrant"
        }
    ]
 
}
